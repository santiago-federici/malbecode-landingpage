---
import BgSvg from "@/components/features-cards/bg-svg.astro";
---

<BgSvg />

{/* container */}
<div class="absolute right-4 bottom-0 h-52 w-64 overflow-hidden rounded-t-md border border-b-0 border-zinc-600 bg-[#010100] shadow-2xl shadow-zinc-800 xl:w-72">
  {/* window header */}
  <div class="flex h-6 w-full items-center gap-1 border-b border-zinc-700 bg-[#111111] px-2">
    {/* three circles */}
    <div class="size-2 rounded-full border-2 border-zinc-700"></div>
    <div class="size-2 rounded-full border-2 border-zinc-700"></div>
    <div class="size-2 rounded-full border-2 border-zinc-700"></div>
  </div>

  {/* main */}
  <div class="grid h-full grid-cols-[80px_1fr] gap-2 p-4">
    {/* sidebar */}
    <div class="space-y-2">
      <div class="h-6 w-full rounded bg-zinc-800/50"></div>
      <div class="h-6 w-full rounded bg-zinc-800/50"></div>
      <div class="h-6 w-full rounded bg-zinc-800/50"></div>
      <div class="h-6 w-full rounded bg-zinc-800/50"></div>
    </div>

    {/* content */}
    <div class="space-y-4">
      {/* stats cards */}
      <div class="grid grid-cols-2 gap-2">
        <div class="mini-dashboard-card-color h-12 rounded border border-zinc-700/50 p-2">
          <div class="h-2 w-1/2 rounded-full bg-zinc-700"></div>
          <div class="mt-2 h-2 w-full rounded-full bg-zinc-700"></div>
        </div>
        <div class="mini-dashboard-card-color h-12 rounded border border-zinc-700/50 p-2">
          <div class="h-2 w-1/2 rounded-full bg-zinc-700"></div>
          <div class="mt-2 h-2 w-full rounded-full bg-zinc-700"></div>
        </div>
      </div>

      {/* chart */}
      <div class="relative h-20 rounded border border-zinc-700/50 bg-zinc-800/20 p-2">
        <div class="flex h-full items-end justify-between gap-1">
          <div class="h-1/3 w-3 rounded bg-zinc-700"></div>
          <div class="h-2/3 w-3 rounded bg-zinc-700"></div>
          <div class="h-1/2 w-3 rounded bg-zinc-700"></div>
          <div class="h-full w-3 rounded bg-zinc-700"></div>
          <div class="h-1/4 w-3 rounded bg-zinc-700"></div>
          <div class="h-3/4 w-3 rounded bg-zinc-700"></div>
        </div>
      </div>
    </div>
  </div>
</div>